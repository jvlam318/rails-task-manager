<div class="container mt-3 p-3">
  <h1>My tasks</h1>

  <ul class="list-group mt-3">
    <% @tasks.each do |task| %>
      <li class="list-group-item mt-2">
        <%= task.completed ? "☑" : "☐" %>
        <%= link_to task.title, task_path(task), :class => "ml-2" %>
        <%= link_to "DELETE", task_delete_path(task), method: :delete, data: { confirm: "Are you sure?" }, :class => "btn btn-danger ml-2" %>
      </li>
    <% end %>
  </ul>

  <%= link_to "new task", tasks_new_path, :class => "btn btn-primary mt-3" %>
</div>
