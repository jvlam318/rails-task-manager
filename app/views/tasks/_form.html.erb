<%= form_for(@task, :html => {:class => "form-group"}) do |t| %>
  <%= t.label :title %>
  <%= t.text_field :title, class: "form-control" %>

  <%= t.label :details %>
  <%= t.text_field :details, class: "form-control" %>

  <%= t.label :completed %>
  <%= t.check_box :completed, class: "form-check" %>

  <%= t.submit%>
<% end %>
